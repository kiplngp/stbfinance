<!-- Start Content -->
<div id="content">

	<!-- Start Main Content -->	
		<div id="main-content">
		<% @notifications.each do |notification| %>
		  <div class="post-list">
					<h1><%= notification.title %></h1>
						<div class="post-meta">
							<ul>
								<li class="meta-date ie6fix"><%= (notification.created_at.strftime("%a %d %b, %Y")) %></li>
								
							</ul>
							<div class="clear"></div>
						</div>
					<p><%= truncate(notification.description, :length => 310).html_safe %></p>
						
						<%= link_to "Learn More", notification_path(notification), :class=>'arrow-link' %>	
					<div class="clear"></div>
					<div class="main-ruler"></div>			
		   </div>
		<% end %>
		<%= will_paginate @notifications, :class=>'pagination_magArticles' %>
		</div>
	<!-- End Main Content -->
		
	<!-- Start Sidebar -->
		<div id="sidebar">
					
			<div class="widget">
				<div class="widget-top round-top"></div>
				<h3>Recent Stock Market Tips</h3>				
				<div class="widget-content">
				<% tips = Tip.find(:all, :order => 'id desc', :limit => 5) %>
				<% tips.each do |stip| %>
				<ul class="arrow-list">
					<li>
						<%= link_to stip.title , tip_path(stip) %>
						<p><em><%= truncate(stip.description, :length => 70).html_safe %></em></p>
					</li>
														
				</ul>
				
				<% end %>
				
				</div>
			</div>
			
			<div class="widget">
				<div class="widget-top round-top"></div>
				<h3>Get in Touch</h3>
				<div class="widget-content">
					<p>Lorem ipsum dolor sit amet, adipiscing elit. Nullam dignissim convallis est. Quisque aliquam. Donec faucibus. Nunc iaculis suscipit dui. Nam sit amet sem.</p>
					<a href="#" class="arrow-link">Contact Us</a>			
				</div>
			</div>					
		</div>
		<!-- End Sidebar -->
		
	<!-- End Sidebar -->
	<div class="clear"></div>
</div>
<!-- End Content -->