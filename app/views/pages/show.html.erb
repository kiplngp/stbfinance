<!-- Start Content -->
<div id="content">

	<!-- Start Main Content -->	
		<div id="main-content">
		
			<h1><%= @page.title %></h1>
			<div class="main-ruler"></div>
			<p><%= @page.body.html_safe %></p>
		
		</div>
	<!-- End Main Content -->
		
	<!-- Start Sidebar -->
		<div id="sidebar">
		
			
			
			<div class="widget">
				<div class="widget-top round-top"></div>
				<h3>Recent Stock Market Tips</h3>				
				<div class="widget-content">
				<% tips = Tip.find(:all, :order => 'id desc', :limit => 5) %>
				<% tips.each do |stip| %>
				<ul class="arrow-list">
					<li>
						<%= link_to stip.title , tip_path(stip) %>
					</li>
														
				</ul>
				
				<% end %>
				<p>&nbsp;</p>
				<p><a href="/tips" class="arrow-link">View all</a></p>
				</div>
			</div>
			<div class="widget">
				<div class="widget-top round-top"></div>
				
				<% if @page.id == 13 %>
				  <h3>Ads</h3>
  				<div class="widget-content">
  				<p><a href="#"><img src="/images/banner/1.gif"></a></p>	
  				<p><a href="#"><img src="/images/banner/2.jpg" style="width:230px;"></a></p>	
  				<p><a href="#"><img src="/images/banner/images3.jpg" style="width:230px;"></a></p>		
  				</div>
				<% else %>
				
				  <h3>Get in Touch</h3>
  				<div class="widget-content">
  					<p>We are highly committed to deliver services with quality and profitability! Get in touch with us to know more ....</p>
  					<a href="/contacts" class="arrow-link">Contact Us</a>			
  				</div>				
				<% end %>
			</div>					
		</div>
		<!-- End Sidebar -->
		
	<!-- End Sidebar -->
	<div class="clear"></div>
</div>
<!-- End Content -->