<!-- Start Content -->
<div id="content">

	<!-- Start Main Content -->	
		<div id="main-content">
		
			<h1><%= @skill.category %></h1>
			<div class="main-ruler"></div>
			<p><%= @skill.question.html_safe %></p>
		
		</div>
	<!-- End Main Content -->
		
	<!-- Start Sidebar -->
		<div id="sidebar">
		
			
			
			<div class="widget">
				<div class="widget-top round-top"></div>
				
				  <h3>Test your skills</h3>				
  				<div class="widget-content">
  				<% skills = Skill.find(:all) %>
  				<% skills.each do |skill| %>
  				<ul class="arrow-list">
  					<li>
  						<%= link_to skill.category , skill_path(skill) %>
  					</li>

  				</ul>

  				<% end %>
  				<p>&nbsp;</p>
  				<p><a href="/tips" class="arrow-link">View all</a></p>
  				</div>
			</div>
			<div class="widget">
				<div class="widget-top round-top"></div>
				
				  <h3>Get in Touch</h3>
  				<div class="widget-content">
  					<p>We are highly committed to deliver services with quality and profitability! Get in touch with us to know more ....</p>
  					<a href="/contacts" class="arrow-link">Contact Us</a>			
  				</div>				
				
			</div>					
		</div>
		<!-- End Sidebar -->
		
	<!-- End Sidebar -->
	<div class="clear"></div>
</div>
<!-- End Content -->